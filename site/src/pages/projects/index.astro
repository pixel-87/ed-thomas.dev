---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const allProjects = await getCollection("projects");
const projects = allProjects.sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<Layout title="Projects">
  <main class="max-w-4xl mx-auto">
    <h1 class="text-2xl font-bold mb-6">
      <span class="text-orange-500 dark:text-orange-400">*</span> projects
    </h1>
    <div class="space-y-6">
      {
        projects.map((project) => (
          <article class="border border-gray-200 rounded-lg p-6 w-full">
            <h2 class="text-xl font-semibold mb-2">
              <a href={`/projects/${project.slug}`}>{project.data.title}</a>
            </h2>
            {project.data.date ? (
              <div class="muted text-sm mb-2">
                {project.data.date.toLocaleDateString("en-GB", {
                  day: "numeric",
                  month: "long",
                  year: "numeric",
                })}
              </div>
            ) : null}
            <p class="muted mb-4">{project.data.description}</p>
            {project.data.tags && project.data.tags.length ? (
              <div class="flex gap-2 flex-wrap">
                {project.data.tags.map((tech) => (
                  <span class="bg-gray-100 text-xs px-2 py-1 rounded">
                    {tech}
                  </span>
                ))}
              </div>
            ) : null}
          </article>
        ))
      }
    </div>
  </main>
</Layout>

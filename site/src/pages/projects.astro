---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Projects">
  <main class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Projects</h1>
    <div class="grid gap-6 md:grid-cols-2">
      <div class="border border-gray-200 rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-2">Project One</h2>
        <p class="text-gray-600 mb-4">Description of your project...</p>
        <div class="flex gap-2">
          <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded"
            >React</span
          >
          <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded"
            >Node.js</span
          >
        </div>
      </div>

      <div class="border border-gray-200 rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-2">Project Two</h2>
        <p class="text-gray-600 mb-4">Another project description...</p>
        <div class="flex gap-2">
          <span class="bg-purple-100 text-purple-800 text-xs px-2 py-1 rounded"
            >Python</span
          >
          <span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded"
            >FastAPI</span
          >
        </div>
      </div>
    </div>
  </main>
</Layout>

---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const allProjects = await getCollection("projects");
const projects = allProjects.sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<Layout title="Projects">
  <main class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Projects</h1>
    <div class="space-y-6">
      {
        projects.map((project) => (
          <article class="border border-gray-200 rounded-lg p-6 w-full">
            <h2 class="text-xl font-semibold mb-2">
              <a href={`/projects/${project.slug}`} class="hover:underline">
                {project.data.title}
              </a>
            </h2>
            {project.data.date ? (
              <div class="text-gray-500 text-sm mb-2">
                {project.data.date.toLocaleDateString()}
              </div>
            ) : null}
            <p class="text-gray-700 mb-4">{project.data.description}</p>
            {project.data.technologies && project.data.technologies.length ? (
              <div class="flex gap-2 flex-wrap">
                {project.data.technologies.map((tech) => (
                  <span class="bg-gray-100 text-gray-700 text-xs px-2 py-1 rounded">
                    {tech}
                  </span>
                ))}
              </div>
            ) : null}
          </article>
        ))
      }
    </div>
  </main>
</Layout>

<div class="relative w-full h-full">
  <canvas
    id="mazeCanvas"
    class="fixed inset-0 z-0 w-full h-full pointer-events-none"
    aria-hidden="true"></canvas>

  <!-- Semi-transparent overlay for better text readability -->
  <div class="fixed inset-0 z-5 pointer-events-none">
    <!-- Single smooth gradient covering entire viewport: stronger centre, gentler transparent edges -->
    <div class="w-full h-full gradient-overlay"></div>
  </div>

  <div class="relative z-10">
    <slot />
  </div>
  <script>
    // Load maze script after page becomes interactive
    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", initMazeScript);
    } else {
      initMazeScript();
    }

    function initMazeScript() {
      import("../scripts/drawHexMaze.js").then(({ default: initMaze }) => {
        const canvas = document.getElementById("mazeCanvas");
        const container = canvas?.parentElement ?? document.body;
        const instance = initMaze({ canvas, container });
        if (import.meta.hot) {
          import.meta.hot.dispose(
            () => instance && instance.destroy && instance.destroy()
          );
        }
      });
    }
  </script>
</div>

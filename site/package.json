{
  "name": "site",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "typecheck": "tsc --noEmit",
    "check": "astro check",
    "lint": "eslint .",
    "lint:spelling": "cspell \"src/content/**/*.{md,mdx}\"",
    "lint:grammar": "vale sync && vale --no-exit \"src/content\"",
    "lint:content": "pnpm run lint:spelling && pnpm run lint:grammar",
    "lint:fix": "eslint . --fix",
    "fmt": "prettier --write .",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.9",
    "@astrojs/rss": "^4.0.13",
    "@astrojs/sitemap": "^3.6.0",
    "@tailwindcss/typography": "^0.5.19",
    "astro": "^5.15.3",
    "prettier": "^3.6.2",
    "sharp": "^0.34.4",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@eslint/js": "^9.39.0",
    "baseline-browser-mapping": "^2.9.14",
    "cspell": "^9.7.0",
    "eslint": "^9.39.0",
    "eslint-plugin-astro": "^1.4.0",
    "globals": "^16.5.0",
    "mdast-util-to-string": "^4.0.0",
    "reading-time": "^1.5.0",
    "tailwindcss": "^3.4.18",
    "typescript-eslint": "^8.46.2"
  }
}
